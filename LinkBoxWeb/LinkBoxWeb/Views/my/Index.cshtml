@using System.Collections.Generic;

@model List<my>


<div class="container"> 
    @for(int i = 0; i < @Model.Count; i++)
    {   

    <div class="card bg-light mb-3 cardView col-xs-12 col-sm-12 col-md-12" style="width: 60%;">
          <div class="card-body">
            <h5 class="card-title">@Model[i].Subject</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model[i].Topic</h6>
            <p class="card-text ">@Model[i].Description</p>
            <a href="@Model[i].Content" id = "newThread" class="card-link cardDescBorder">View</a>
          </div>
    </div>
    
    }
</div>