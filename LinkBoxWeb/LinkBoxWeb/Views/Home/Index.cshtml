    <div class="row">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-primary active" id="all">
            <input type="radio" name="options" id="option1" autocomplete="off" checked> All
            </label>
            
            <label class="btn btn-primary" id="library">
            <input type="radio" name="options" id="option2" autocomplete="off"> Library
            </label>

            <label class="btn btn-primary" id="exercise">
            <input type="radio" name="options" id="option3" autocomplete="off"> Exercise
            </label>
    </div>



    </div>


    <div class="row">
    @for(int i = 0; i < @Model.Count; i++)
    {   
        
    <div class="card bg-light mb-3 col-xs-12 col-sm-4 col-md-3 @Model[i].Subject.ToUpper() @Model[i].Topic.ToUpper() @Model[i].ResourceType.ToUpper() @Model[i].Description.ToUpper()" id="cardView">
          <div class="card-body">

            <h5 class="card-title">@Model[i].Subject</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model[i].Topic - @Model[i].ResourceType</h6>
            <p class="card-text ">@Model[i].Description</p>
            <a href="@Model[i].Content" id = "newThread" class="card-link cardDescBorder">View</a>
            <a data-toggle="modal" href="~/formulas.txt" data-target="#myModal">Click me !</a>
            <p class="card-vote"><i class="fa fa-heart "></i> @Model[i].Votes</p>
          </div>
    </div>

                <!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                 <h4 class="modal-title">Modal title</h4>

            </div>
            <div class="modal-body"><div class="te"></div></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
